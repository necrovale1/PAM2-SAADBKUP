<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SAAD2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SAAD2.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SAAD2">

    <!-- Define a LoginPage como a primeira página visível do aplicativo. -->
    <!-- Ela não está dentro de uma TabBar para aparecer sozinha. -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- A TabBar contém as páginas principais que aparecem APÓS o login. -->
    <!-- Damos a ela uma rota "main" para podermos navegar até ela. -->
    <TabBar Route="main">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Icon="{OnPlatform 'icon_home.png', iOS='icon_home_ios.png'}" />

        <ShellContent
            Title="Matérias"
            ContentTemplate="{DataTemplate views:MateriasPage}"
            Icon="{OnPlatform 'icon_book.png', iOS='icon_book_ios.png'}" />

        <ShellContent
            Title="Faltas"
            ContentTemplate="{DataTemplate views:FaltasPage}"
            Icon="{OnPlatform 'icon_calendar.png', iOS='icon_calendar_ios.png'}" />

        <ShellContent
            Title="Sair"
            ContentTemplate="{DataTemplate views:LogoutPage}"
            Icon="{OnPlatform 'icon_logout.png', iOS='icon_logout_ios.png'}" />
    </TabBar>

</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SAAD2.Views.RegistroFaltasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Registrar Falta">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Nome da Matéria" />
        <Entry x:Name="MateriaEntry" Placeholder="Ex: Cálculo I" />

        <Label Text="Quantidade de Faltas" />
        <Entry
            x:Name="FaltasEntry"
            Keyboard="Numeric"
            Placeholder="Ex: 2" />

        <Label Text="Quantidade de Presenças" />
        <Entry
            x:Name="PresencasEntry"
            Keyboard="Numeric"
            Placeholder="Ex: 18" />

        <Button
            Margin="0,20,0,0"
            Clicked="OnSalvarClicked"
            Text="Salvar" />
    </VerticalStackLayout>
</ContentPage>
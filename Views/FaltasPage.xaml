<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD2.Views.FaltasPage"
             Title="Faltas">
    <StackLayout>
        <ListView ItemsSource="{Binding Faltas}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Margin="10" Padding="10" StrokeShape="RoundRectangle 10" Stroke="LightGray" StrokeThickness="1">
                            <StackLayout>
                                <Label Text="{Binding Materia}" FontAttributes="Bold" />
                                <Label Text="{Binding Faltas, StringFormat='Faltas: {0}'}" />
                                <Label Text="{Binding Presencas, StringFormat='PresenÃ§as: {0}'}" />
                            </StackLayout>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Registrar Falta" Clicked="OnRegistrarFaltaClicked" />
    </StackLayout>
</ContentPage>
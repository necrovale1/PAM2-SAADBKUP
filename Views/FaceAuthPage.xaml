<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD2.Views.FaceAuthPage"
             Title="Autenticação Facial"
             Shell.NavBarIsVisible="False">
    <Grid>
          <VerticalStackLayout 
            VerticalOptions="End" 
            HorizontalOptions="Center"
            Padding="30"
            Spacing="15">

            <Label 
                Text="Centralize seu rosto no círculo"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,10"/>

            <Button
                x:Name="VerifyFaceButton"
                Text="Verificar Rosto"
                BackgroundColor="{StaticResource AccentColor}"
                TextColor="White"
                CornerRadius="10"
                Padding="20,10"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
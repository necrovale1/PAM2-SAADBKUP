<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SAAD2.Views.RegistroMateriasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Registrar Matéria"
    BackgroundColor="{DynamicResource PageBackgroundColor}">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Nome da Matéria" TextColor="{DynamicResource PrimaryTextColor}" />
        <Entry
            x:Name="NomeEntry"
            Placeholder="Ex: Engenharia de Software"
            TextColor="{DynamicResource PrimaryTextColor}" />

        <Label Text="Descrição" TextColor="{DynamicResource PrimaryTextColor}" />
        <Entry
            x:Name="DescricaoEntry"
            Placeholder="Uma breve descrição da matéria"
            TextColor="{DynamicResource PrimaryTextColor}" />

        <Label Text="Categoria" TextColor="{DynamicResource PrimaryTextColor}" />
        <Entry
            x:Name="CategoriaEntry"
            Placeholder="Ex: Obrigatória"
            TextColor="{DynamicResource PrimaryTextColor}" />

        <Button
            Margin="0,20,0,0"
            BackgroundColor="{DynamicResource AccentColor}"
            Clicked="OnSalvarClicked"
            Text="Salvar Matéria"
            TextColor="{DynamicResource PrimaryTextColor}" />
    </VerticalStackLayout>
</ContentPage>